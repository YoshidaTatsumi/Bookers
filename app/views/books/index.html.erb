<h2>Books</h2>
<table>
	<tr>
		<td>title</td>
		<td>body</td>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td><%= book.title %></td>
			<td><%= book.body %></td>
		</tr>
	<% end %>
</table>
<h2>New book</h2>
<%= form_for(@book) do |f| %>
	<h4>Title</h4>
	<%= f.text_field :title %>

	<h4>body</h4>
	<%= f.text_area :body %>

	<%= f.submit 'Create Book' %>
<% end %>