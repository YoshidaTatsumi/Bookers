<div class="index">
	<% if flash[:notice] %>
		<div class="flash">
			<%= flash[:notice] %>
		</div>
	<% end %>
	<h1>Books</h1>
	<table>
		<tr>
			<th>Title</th>
			<th>Body</th>
		</tr>
		<% @books.each do |book| %>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book) %></td>
				<td><%= link_to "Edit", edit_book_path(book) %></td>
				<td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		<% end %>
	</table>
	<h2>New book</h2>
    <% if @book.errors.any? %>
 		<div class="error-message">
 			<h2><%= @book.errors.full_messages.count %> errors prohibited this book from being saved:</h2>
   			<ul>
    			<% @book.errors.full_messages.each do |message| %>
        			<li><%= message %></li>
    			<% end %>
    		</ul>
		</div>
	<% end %>
	<%= form_for(@book) do |f| %>
		<div class="field">
			<%= f.label :title, "Title" %>
			<%= f.text_field :title %>
		</div>

		<div class="field">
			<%= f.label :body, "Body" %>
			<%= f.text_area :body %>
		</div>

		<div class="action">
			<%= f.submit 'Create Book' %>
		</div>
	<% end %>
</div>